<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.profile.ui.OtherPhoneLoginActivity">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dp_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/arrow_back" />

    <TextView
        android:id="@+id/tvLoginPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="密码登录"
        app:layout_constraintBottom_toBottomOf="@+id/ivBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivBack"
        android:textSize="@dimen/sp_8"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:textColorHint="#FFFFFF"
        />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="@dimen/dp_148"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37"
        android:background="@drawable/shape_bg_phone"
        android:gravity="center"
        android:textSize="@dimen/sp_9"
        android:textColor="#FFFFFF"
        android:hint="输入手机号"
        android:textColorHint="#FFFFFF"
        />

    <TextView
        android:id="@+id/tvGetCode"
        android:layout_width="@dimen/dp_60"
        android:layout_height="0dp"
        android:text="获取验证码"
        app:layout_constraintBottom_toBottomOf="@+id/etPwd"
        app:layout_constraintEnd_toEndOf="@+id/etPhone"
        app:layout_constraintStart_toEndOf="@+id/etPwd"
        app:layout_constraintTop_toTopOf="@+id/etPwd"
        android:background="@drawable/shape_bg_get_code"
        android:gravity="center"
        android:textSize="@dimen/sp_9"
        android:textColor="#FFFFFF"
        />

    <EditText
        android:id="@+id/etPwd"
        android:layout_width="@dimen/dp_87"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/tvGetCode"
        app:layout_constraintStart_toStartOf="@+id/etPhone"
        app:layout_constraintTop_toBottomOf="@+id/etPhone"
        android:background="@drawable/shape_bg_code"
        android:gravity="center"
        android:textSize="@dimen/sp_9"
        android:textColor="#FFFFFF"
        android:hint="输入验证码"
        android:textColorHint="#FFFFFF"
        />


    <TextView
        android:id="@+id/tvTongYi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_21"
        android:text="登录即表明同意"
        app:layout_constraintEnd_toStartOf="@+id/tvBiXin"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPwd"
        android:textSize="@dimen/sp_7"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/tvBiXin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_21"
        android:text="比心用户协议"
        app:layout_constraintEnd_toStartOf="@+id/tvHe"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTongYi"
        app:layout_constraintTop_toBottomOf="@+id/etPwd"
        android:textSize="@dimen/sp_7"
        android:textColor="#FFEA00"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />

    <TextView
        android:id="@+id/tvHe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_21"
        android:text="和"
        app:layout_constraintEnd_toStartOf="@+id/tvYinSi"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvBiXin"
        app:layout_constraintTop_toBottomOf="@+id/etPwd"
        android:textSize="@dimen/sp_7"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/tvYinSi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_21"
        android:text="隐私政策"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvHe"
        app:layout_constraintTop_toBottomOf="@+id/etPwd"
        android:textSize="@dimen/sp_7"
        android:textColor="#FFEA00"
        android:layout_marginLeft="2dp"
        />

    <ImageView
        android:id="@+id/ivSubmit"
        android:layout_width="@dimen/dp_21"
        android:layout_height="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTongYi"
        app:layout_constraintVertical_bias="0.16000003"
        android:src="@mipmap/success_login"
        />


    <TextView
        android:id="@+id/tvLoginTrouble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:text="登录遇到问题"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/sp_7"
        android:textColor="#FFEA00"
        />

</androidx.constraintlayout.widget.ConstraintLayout>